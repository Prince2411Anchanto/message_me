<div class="ui fluid raised card chat_box">
    
    <div class="content" id="message-scroll">
        <div class="ui feed" id="message-container">
            <%= render @messages%>
        </div>
    </div>

    <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, method: "POST",remote: true) do |f|%>
        <div class= "ui input fluid">
            <%= f.text_field :body, class: "ui input fluid", placeholder: "Type a message"%>
            <div class= "ui fluid">
            <%= f.submit "Send", class: "ui orange button"%>
            </div>
        </div>
        <% end %>
  </div>
</div>